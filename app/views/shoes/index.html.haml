= form_with(url: search_shoes_path, local: true, method: :get, class: "search-form") do |form|
  = form.text_field :keyword, placeholder: "Brandを検索する", class: "search-input"
  = form.submit "検索", class: "search-btn"
.contents.row
  - @shoes.each do |shoe|
    = render partial: "shoe", locals: { shoe: shoe }
