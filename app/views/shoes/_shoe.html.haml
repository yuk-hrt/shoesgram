.content_post{:style => "background-image: url(#{shoe.image});"}
  .more
    %span= image_tag 'arrow_top.png'
    %ul.more_list
      %li
        = link_to 'Deta', shoe_path(shoe.id), method: :get
      - if user_signed_in? && current_user.id == shoe.user_id
        %li
          = link_to 'Edit', edit_shoe_path(shoe.id), method: :get
        %li
          = link_to 'Delete', shoe_path(shoe.id), method: :delete
  %span.name
    = link_to "/users/#{shoe.user.id}" do
      = shoe.user.name
#favorite{ id: shoe.id }
  = render 'favorites/favorite', shoe: shoe
